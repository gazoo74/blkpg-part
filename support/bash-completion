_blkpg_part()
{
	local cur prev words cword
	_init_completion || return

	case $prev in
	-l|--volume-name)
		_filedir
		return
		;;
	esac

	local short_opts="-l -h -V"
	local long_opts="--volume-name --help --version"
	if [[ "$cur" == -* ]]; then
		COMPREPLY=( $( compgen -W "$short_opts $long_opts" -- "$cur" ) )
		return
	fi

	local args
	_count_args

	if [[ "$args" -eq 1 ]]; then
		COMPREPLY=( $(compgen -W "add delete resize" -- "$cur") )
		return
	fi

	if [[ "$args" -eq 2 ]]; then
		COMPREPLY=( $(compgen -W "$(find /dev -type b)" -- "$cur") )
		return
	fi

	if [[ "$args" -eq 3 ]]; then
		COMPREPLY=( $(compgen -W "$(seq 0 1 32)" -- "$cur") )
		return
	fi

	local operation=
        for (( i=0; i < ${#words[@]}; i++ )); do
		if [[ ${words[i]} =~ ^(add|delete|resize)$ ]]; then
			operation="${words[i]}"
			break
		fi
        done

	if [[ "$operation" == "delete" ]] || [[ "$args" -ge 6 ]]; then
		return
	fi

	COMPREPLY=( $(compgen -W "$(seq 0 1 32)" -- "$cur") )
} &&
complete -F _blkpg_part blkpg-part
